{
  "testRegex": "(/tests/.*|/src/.*\\.test)\\.js",
  "!collectCoverage": true,
  "verbose": true,
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "coverageDirectory": "tests-coverage",
  "coverageReporters": [
    "lcov",
    "text"
  ],
  "moduleDirectories": [
    "node_modules",
    "vendor"
  ]
}